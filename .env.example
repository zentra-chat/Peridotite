# Zentra Peridotite Backend Configuration

# Environment
APP_ENV=development

# Server Configuration
PORT=8080
RATE_LIMIT_RPS=50
RATE_LIMIT_BURST=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=zentra
POSTGRES_PASSWORD=zentra_secure_password
POSTGRES_DB=zentra
POSTGRES_SSLMODE=disable
# Alternative: Use DATABASE_URL directly (overrides individual settings)
# DATABASE_URL=postgres://zentra:zentra_secure_password@localhost:5432/zentra?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# Alternative: Use REDIS_URL directly (overrides individual settings)
# REDIS_URL=redis://localhost:6379

# MinIO/Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=zentra_minio
MINIO_SECRET_KEY=zentra_minio_secret
MINIO_USE_SSL=false
MINIO_BUCKET_ATTACHMENTS=attachments
CDN_BASE_URL=http://localhost:9000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# Encryption Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here